<%= link_to "New Article",
    new_article_path,
    class: "btn btn-default btn-lg",
    id: "new-article-btn" %>

<% @articles.each do |article| %>
  <div class="well well-lg article-detail">
    <div class="article-title">
      <%= link_to article.title, article_path(article) %>
    </div>
    <div class="article-body">
      <%= article.body %>
    </div>
  </div>
<% end %>
